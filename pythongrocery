# create an empty list to store the grocery items
grocery_list = []

while True:
    # print the current list of items
    print("Grocery List:")
    for i, item in enumerate(grocery_list):
        print(f"{i+1}. {item}")

    # prompt the user to choose an action
    print("Enter the number of the item you would like to remove, or '+' to add an item:")
    item_number = input()

    # check if the user wants to quit
    if item_number == 0:
        break

    # convert the input to an integer
    item_number = int(item_number)

    # remove the specified item from the list
    if item_number >= 1 and item_number <= len(grocery_list):
        grocery_list.pop(item_number - 1)

    # add an item to the list
    elif item_number == '+':
        item_name = input("Enter the name of the item you would like to add: ")
        grocery_list.append(item_name)

    # print the updated list of items
    print("Grocery List:")
    for i, item in enumerate(grocery_list):
        print(f"{i+1}. {item}")
