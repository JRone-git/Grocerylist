# define the list of items
grocery_list = ['Milk', 'Bread', 'Eggs', 'Butter', 'Cheese']

# print the initial list of items
print("Grocery List")
for i, item in enumerate(grocery_list):
    print(f"{i+1}. {item}")

# prompt the user to remove or add items to the list
while True:
    # get the user's input
    item_number = input("Enter the number of the item you would like to remove from the list, or enter '0' to quit: ")

    # check if the user wants to quit
    if item_number == '0':
        break

    # convert the input to an integer
    item_number = int(item_number)

    # remove the specified item from the list
    if item_number > 0 and item_number <= len(grocery_list):
        grocery_list.pop(item_number - 1)

    # add an item to the list
    elif item_number == -1:
        item_name = input("Enter the name of the item you would like to add: ")
        grocery_list.append(item_name)

    # print the updated list of items
    print("Grocery List")
    for i, item in enumerate(grocery_list):
        print(f"{i+1}. {item}")
